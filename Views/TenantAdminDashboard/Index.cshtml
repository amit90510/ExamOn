<script>
    function percentageToDegrees(percentage) {
        return percentage / 100 * 360
    }
    function StartProgreeBar(dv, isCustom) {
        if (dv) {
            var value = $("#" + dv).attr('data-value');
            var left = $("#" + dv).find('.progress-left .progress-bar');
            var right = $("#" + dv).find('.progress-right .progress-bar');

            if (value > 0) {
                if (isCustom) {
                    value = Math.floor(Math.random() * 90) + 10;
                }
                if (value <= 50) {
                    right.css('transform', 'rotate(' + percentageToDegrees(value) + 'deg)')
                } else {
                    right.css('transform', 'rotate(180deg)')
                    left.css('transform', 'rotate(' + percentageToDegrees(value - 50) + 'deg)')
                }
            }
        }
    }

    function getGetLicenceExpireHistory() {
        ServerData("/TenantAdminDashboard/GetLicenceExpire", "Post", null, (data) => {
            if (data.Error) {
                //this case is for offcanvas
                $("#txtSubscriptionLeftPercentage").attr('data-value', 0);
                $("#spanSubscriptionLeftPercentage").text(0);
                $("#subscriptionExpire").click();
            } else {
                if (data.Data[0].SubscriptionEndMessage > 100) {
                    $("#txtSubscriptionLeftPercentage").attr('data-value', 100);
                    $("#spanSubscriptionLeftPercentage").text(100);
                } else {
                    $("#txtSubscriptionLeftPercentage").attr('data-value', data.Data[0].SubscriptionEndMessage);
                    //$("#spanSubscriptionLeftPercentage").text(data.Data[0].SubscriptionEndMessage);
                    NumberCountersAnimation('spanSubscriptionLeftPercentage', data.Data[0].SubscriptionEndMessage);

                }
            }
            //cont here for charts
            $("#txtsubscriptionLastDate").text(toShowSqlDateinUI(data.Data[0].SubscriptionEndDate));
            //$("#txtLastRechargeAmount").text(data.Data[0].RechargeAmount);
            NumberCountersAnimation('txtLastRechargeAmount', data.Data[0].RechargeAmount);
            StartProgreeBar('txtSubscriptionLeftPercentage');
        }, () => { });
    }
    
    function getStudentCountHistory() {
        ServerData("/TenantAdminDashboard/GetStudentHistory", "Post", null, (data) => {
            if (data.Data) {
                $("#txtActiveStudentPercentage").attr('data-value', data.Data[0].Active);
                //cont here for charts
                $("#txtInActiveStudent").text(data.Data[0].NonActive);
               // $("#spanActiveStudentPercentage").text(data.Data[0].Active);
                NumberCountersAnimation('spanActiveStudentPercentage', data.Data[0].Active);
                $("#txtBlockedStudent").text(data.Data[0].Blocked);
                StartProgreeBar('txtActiveStudentPercentage', true);
            }
        }, () => { });
    }

    function getStudentEnrollmentCountHistory() {
        ServerData("/TenantAdminDashboard/GetStudentEnrollmentHistory", "Post", null, (data) => {
            if (data.Data) {
                $("#txtEnrollmentLeftPercentage").attr('data-value', data.Data[0].Total);
                //cont here for charts
                $("#txtEnrooled").text(data.Data[0].Enrolled);
               // $("#spanEnrollmentLeftPercentage").text(data.Data[0].Total);
                NumberCountersAnimation('spanEnrollmentLeftPercentage', data.Data[0].Total);
                $("#txtNotEnrooled").text(data.Data[0].NotEnrolled);
                StartProgreeBar('txtEnrollmentLeftPercentage', true);
            }
        }, () => { });
    }

    function getTeacherCountHistory() {
