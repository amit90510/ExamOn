                NumberCountersAnimation('spanTotalClassLeftPercentage', data.Data[0].ClassCount);
                $("#txtShiftCount").text(data.Data[0].ShiftCount);
                StartProgreeBar('txtTotalClassLeftPercentage', true);
            }
        }, () => { });
    }

    function getDatabaseStaticsHistory() {
        ServerData("/TenantAdminDashboard/GetDatabaseStaticsHistory", "Post", null, (data) => {
            if (data.Data && data.StatusCode == 1) {
                $("#txtDBSizeLeftPercentage").attr('data-value', data.Data[0].DBUsedSize.toFixed(2));
                //cont here for charts
                $("#txtTotalSize").text(data.Data[0].DBTotalSize.toFixed(2) + ' MB');
                NumberCountersAnimation('spanDBSizeLeftPercentage', data.Data[0].DBUsedSize.toFixed(2));
                $("#txtFreeSize").text(data.Data[0].DBFreeSize.toFixed(2) + ' MB');
                StartProgreeBar('txtDBSizeLeftPercentage', true);
            }
        }, () => { });
    }

    $(document).ready(() => {
        getGetLicenceExpireHistory();
        getStudentCountHistory();
